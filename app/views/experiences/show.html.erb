<div class= "container">
<div class="show-banner my-3 rounded" style= "background-image: url(<%= cl_image_path @experience.photo.key %>);" >

   <h2 class="experience-title"><%= @experience.name %></h2>
  </div>
</div>

<div class="container">
  <div class="row">

    <div class="col-12 col-lg-8">
      <div class="card-show">
        <div class="card-body">
          <h4 class="card-title"><%= @experience.name %></h4>
          <p>Experiencia ofrecida por <%= @user.username %></p>
          <br>
          <p class="card-text"><%= @experience.description %></p>
          <br>
          <div class="availability">
            <p>Disponibilidad <%= @experience.availability %></p>
          </div>
          <div class="categoria-experiencia">
            <p>Category <%= @experience.category %></p>
          </div>
          <div class="categoria-experiencia">
            <p>Lugar <%= @experience.place%></p>
          </div>
          <div class="categoria-experiencia">
            <h4>$<%= @experience.price%></h4>
          </div>
        </div>
      </div>
    </div>
    <div class="border p-5 ">
      <div class="col-12 col-lg-4">
        <div class="card-booking">
           <div class="card-body">
            <h5>Book this experience</h5>
            <p class="card-text"><h4>Precio <%= @experience.price %></h4></p>
            <div class="form-group text-center">
              <%= render "form2" %>
          </div>
        </div>
      </div>
    </div>
  </div>

    <div class="row">
      <div class="col-12 col-lg-6">
      <h3 class="mt-5 mb-3 border-bottom border-warning">Reviews</h3>
        <ul class="list-group review-form">
          <% @experience.reviews.each do |review| %>
          <li class="list-group-item"><%="â­"*review.rating %> <%= review.content %></li>
        <% end %>
      </ul>
    </div>
  </div>







